{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:vue/vue3-essential"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {},
  "overrides": [
    {
      "files": ["./public/**/*.js"],
      "rules": {
        "indent": "off",
        "no-undef": "off"
      },
      "parserOptions": {
        "ecmaVersion": 3,
        "sourceType": "script"
      }
    }
  ]
}
